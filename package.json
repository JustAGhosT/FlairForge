{
  "name": "flairforge-workspace",
  "version": "1.0.0",
  "description": "FlairForge AI-Powered Flyer Generator - Monorepo Workspace",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "test": "node tests/__scripts__/test-runner.js",
    "test:all": "node tests/__scripts__/test-runner.js",
    "test:unit": "npm run test:unit:frontend && npm run test:unit:backend",
    "test:unit:frontend": "cd frontend && npm run test:unit",
    "test:unit:backend": "cd backend && npm run test:unit",
    "test:integration": "npm run test:integration:backend",
    "test:integration:backend": "cd backend && npm run test:integration",
    "test:e2e": "cd frontend && npm run test:e2e",
    "test:e2e:frontend": "cd frontend && npm run test:e2e",
    "test:performance": "cd frontend && npm run test:performance",
    "test:security": "npm run test:security:frontend && npm run test:security:backend",
    "test:security:frontend": "cd frontend && npm run test:security",
    "test:security:backend": "cd backend && npm run test:security",
    "test:coverage": "vitest --coverage --outputFile=tests/__coverage__/lcov.info",
    "test:snapshots": "vitest --update --outputFile=tests/__snapshots__/",
    "test:coverage:frontend": "cd frontend && npm run test:coverage",
    "test:coverage:backend": "cd backend && npm run test:coverage",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && rm -rf node_modules dist coverage",
    "clean:backend": "cd backend && rm -rf node_modules coverage",
    "type-check": "npm run type-check:frontend",
    "type-check:frontend": "cd frontend && npm run type-check",
    "kill-servers": "call scripts/kill-vite-servers.bat",
    "test:backend-server": "cd backend && npm run dev &",
    "test:backend-server:stop": "pkill -f 'node src/index.js' || true",
    "test:frontend": "cd frontend && npm run test",
    "test:backend": "cd backend && npm run test"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "flairforge",
    "flyer-generator",
    "ai",
    "react",
    "netlify",
    "monorepo"
  ],
  "author": "FlairForge Team",
  "license": "MIT"
} 